@model Music_2.Data.Models.RoleAssignRequest

@{
    ViewData["Title"] = "RoleAssign";
}

<h4>Thêm Role cho người dùng</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="RoleAssign">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            @for (var i = 0; i < Model.Roles.Count; i++)
            {
                <div class="form-group">
                    <label>
                        @Model.Roles[i].Name
                        <input type="checkbox" asp-for="Roles[i].Selected" />
                        <input type="hidden" asp-for="Roles[i].Id" />
                        <input type="hidden" asp-for="Roles[i].Name" />
                    </label>
                </div>
            }
            <div class="form-group">
                <input type="submit" value="  Save  " class="btn btn-success btn-icon-split" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">← Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
